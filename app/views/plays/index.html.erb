<div class="container">
<h1 class="current-category"><%= params[:category] %></h1>
  <h1>Plays</h1>
  <% if @plays.count == 0 %>
    <h3>There are no plays in this category</h3>
  <% else %>
      <% @plays.each do |play| %>
        <h2><%= link_to play.title, play_path(play) %></h2>
      <% end %>
  <% end %>
  
  <br>
  
  <%= link_to 'Add Play', new_play_path, class: "btn btn-success" %>
</div>

